<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeNeon.Views.HomePage"
             BackgroundImage="wallpaper.jpg">

    <FlexLayout Direction="Column">
        <Frame 
           BackgroundColor="#545454"
           Padding="5">
            <StackLayout Orientation="Horizontal">
                <Image Margin="10,0,0,0"
                       Source="logo.png" 
                       WidthRequest="40"/>
                <Label Text="PokeNeon" 
                       VerticalOptions="Center"
                       HorizontalOptions="CenterAndExpand" 
                       TextColor="White" 
                       FontSize="20"/>
            </StackLayout>
        </Frame>
        <Label Text="Bienvenue !" 
               TextColor="White" 
               HorizontalTextAlignment="Middle" 
               FontSize="12" 
               Margin="10,10,10,0" 
               Padding="0,5,0,0" 
               BackgroundColor="#252525"/>
        <Label Text="Ici, vous pourrez retrouver toutes les informations sur n'importe quel Pokémon existant à ce jour, mais vous pourrez également en ajouter un nouveau en détaillant chaque information le concernant"  
               TextColor="White" 
               FontSize="12" 
               HorizontalTextAlignment="Center" 
               Margin="10,0,10,0" 
               Padding="5,0,5,5" 
               BackgroundColor="#252525"/>
        <Label Text="Là, tu es sur la page d'accueil, mais tu peux changer d'onglet ci-dessous !"  
               TextColor="White" 
               FontSize="12" 
               HorizontalTextAlignment="Middle" 
               Margin="10,300,10,0" 
               Padding="0,5,0,0"
               BackgroundColor="#252525"/>
        <Label Text="- Le logo Poké Ball permet de voir la liste de tous les Pokémon du jeu"  
               TextColor="White" 
               FontSize="12" 
               HorizontalTextAlignment="Middle" 
               Margin="10,0,10,0" 
               BackgroundColor="#252525"/>
        <Label Text="- Le logo + permet d'ajouter un Pokémon à la liste"  
               TextColor="White" 
               FontSize="12" 
               HorizontalTextAlignment="Middle" 
               Margin="10,0,10,0" 
               BackgroundColor="#252525"/>
        <Label Text="- Le logo loupe permet de rechercher n'importe quel Pokémon"  
               TextColor="White" 
               FontSize="12" 
               HorizontalTextAlignment="Middle" 
               Margin="10,0,10,0"
               Padding="0,0,0,5"
               BackgroundColor="#252525"/>
    </FlexLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeNeon.Views.AddPage"
             BackgroundImage="wallpaper.jpg">
    <ContentPage.Content>
        <FlexLayout Direction="Column">
            <Button Text="Ajouter"
                    BackgroundColor="Gray"
                    WidthRequest="100"
                    HeightRequest="40"
                    FontSize="12"
                    FontAttributes="Bold"
                    Margin="10,10,5,10"
                    BorderColor="#A6A805"
                    BorderWidth="2"></Button>
            <StackLayout Orientation="Horizontal"
                         Margin="10,0,10,0"
                         BackgroundColor="Gray">
                <Image Source="ajout.png"
                       WidthRequest="150"
                       BackgroundColor="White"></Image>
                <StackLayout Orientation="Vertical"
                             WidthRequest="175">
                    <Entry Placeholder="Saisir ID"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                    <Entry Placeholder="Saisir Nom"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                    <Button Text="Choisir 1 ou 2 type(s)"
                            HeightRequest="30"
                            FontSize="8"></Button>
                    <Entry Placeholder="Saisir Taille"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                    <Entry Placeholder="Saisir Poids"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                    <Entry Placeholder="Saisir Talent 1"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                    <Entry Placeholder="Saisir Talent 2 (Optionnel)"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                    <Entry Placeholder="Saisir Talent 3 (Optionnel)"
                           FontSize="8"
                           HeightRequest="30"></Entry>
                </StackLayout>
            </StackLayout>
            <Grid HeightRequest="210"
                  Margin="10">
                <Label Text="PV :"
                       BackgroundColor="LightGray"
                       TextColor="Black"
                       FontSize="8"
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                <Entry Placeholder="Saisir PV" 
                       PlaceholderColor="Black"
                       TextColor="Black"
                       BackgroundColor="LightGray"
                       FontSize="8"
                       Grid.Column="1"
                       Grid.Row="0"/>
                <Label Text="Attaque :"
                       BackgroundColor="Gray"
                       TextColor="Black"
                       FontSize="8"
                       Grid.Column="0"
                       Grid.Row="1"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                <Entry Placeholder="Saisir Attaque" 
                       PlaceholderColor="Black"
                       TextColor="Black"
                       BackgroundColor="Gray"
                       FontSize="8"
                       Grid.Column="1"
                       Grid.Row="1"/>
                <Label Text="Défense :"
                       BackgroundColor="LightGray"
                       TextColor="Black"
                       FontSize="8"
                       Grid.Column="0"
                       Grid.Row="2"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                <Entry Placeholder="Saisir Défense" 
                       PlaceholderColor="Black"
                       TextColor="Black"
                       BackgroundColor="LightGray"
                       FontSize="8"
                       Grid.Column="1"
                       Grid.Row="2"/>
                <Label Text="Attaque spéciale :"
                       BackgroundColor="Gray"
                       TextColor="Black"
                       FontSize="8"
                       Grid.Column="0"
                       Grid.Row="3"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                <Entry Placeholder="Saisir Attaque Spéciale"
                       PlaceholderColor="Black"
                       TextColor="Black"
                       BackgroundColor="Gray"
                       FontSize="8"
                       Grid.Column="1"
                       Grid.Row="3"/>
                <Label Text="Défense spéciale :"
                       BackgroundColor="LightGray"
                       TextColor="Black"
                       FontSize="8"
                       Grid.Column="0"
                       Grid.Row="4"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                <Entry Placeholder="Saisir Défense spéciale" 
                       PlaceholderColor="Black"
                       TextColor="Black"
                       BackgroundColor="LightGray"
                       FontSize="8"
                       Grid.Column="1"
                       Grid.Row="4"/>
                <Label Text="Vitesse :"
                       BackgroundColor="Gray"
                       TextColor="Black"
                       FontSize="8"
                       Grid.Column="0"
                       Grid.Row="5"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                <Entry Placeholder="Saisir Vitesse" 
                       PlaceholderColor="Black"
                       TextColor="Black"
                       BackgroundColor="Gray"
                       FontSize="8"
                       Grid.Column="1"
                       Grid.Row="5"/>
            </Grid>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>